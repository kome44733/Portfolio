<div class="search_form">
  <% if admin_signed_in? %>
    <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
      <div class="row">
        <div class="col-md-10">
          <%= f.text_field :word ,placeholder:"質問を検索する",class: "form-control" %>
        </div>
        <div class="col-md-2 col-sm-12 btn-block">
          <%= f.submit "検索", class: "btn btn-sm btn-outline-dark" %>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if customer_signed_in? %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <div class="row d-flex align-items-center">
        <div class="col-md-10 mt-2">
          <% if (params[:id]).present? %>
            <%= f.text_field :word ,placeholder:"この職業の質問を検索する",class: "form-control" %>
          <% else %>
            <%= f.text_field :word ,placeholder:"質問を検索する",class: "form-control" %>
          <% end %>
          <%= f.hidden_field :profession,value: params[:id] %>
        </div>
        <div class="col-md-2 col-12 mt-2">
          <%= f.submit "検索", class: " btn-block btn btn-sm btn-outline-dark" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

