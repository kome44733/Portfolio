
<div class="search_form">
  <% if admin_signed_in? %>
    <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word ,placeholder:"質問を検索する" %>
      <%= f.submit "検索", class: "btn btn-sm btn-outline-dark" %>
    <% end %>
  <% end %>
  <% if customer_signed_in? %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <% if (params[:id]).present? %>
        <%= f.text_field :word ,placeholder:"この職業に質問を検索する" %>
      <% else %>
        <%= f.text_field :word ,placeholder:"質問を検索する" %>
      <% end %>
      <%= f.hidden_field :profession,value: params[:id] %>
      <%= f.submit "検索", class: "btn btn-sm btn-outline-dark" %>
    <% end %>
  <% end %>
</div>

