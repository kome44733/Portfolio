<div class="container">
  <div class = "row">
    <div class = "col-lg-5">
      <h3>職業一覧・追加</h3><br>
        <%= form_with model: @profession,url:admin_professions_path, method: :post do |f| %>
          <%= f.label :name,"職業" %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-outline-success" %>
        <% end %>

        <table class= "table mt-5">
          <thead>
            <th class ="table-dark">職業</th>
            <th class ="table-dark"></th>
          </thead>
          <tbody>
            <% @professions.each do |profession| %>
            <tr>
              <td><%= profession.name %></td>
              <td><%= link_to "編集する",edit_admin_profession_path(profession.id), class: "btn btn-sm btn-outline-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>