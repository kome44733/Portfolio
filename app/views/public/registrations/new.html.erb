<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.label :not_known  %>
    <%= f.radio_button :gender, :not_known %>
    <%= f.label :male  %>
    <%= f.radio_button :gender, :male %>
    <%= f.label :female  %>
    <%= f.radio_button :gender, :female %>
  </div>
  
  <div class="field">
    <%= f.label :profession %><br />
    <%= f.label :no_experience  %>
    <%= f.radio_button :profession, :sales %>
    <%= f.label :male  %>
    <%= f.radio_button :profession, :planning_management %>
    <%= f.label :female  %>
    <%= f.radio_button :profession, :office_assistant %>
  </div>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
