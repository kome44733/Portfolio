<div class="container">
  
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  <h2>サインイン</h2>
  <div class="row col-md-8 mt-3">
    <div class="col-md-4">
      <%= f.label :nickname %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>
  </div>
  <div class="row col-md-8 mt-3">
    <div class="col-md-4">
      <%= f.label :gender %>
    </div>
    <div class="col-md-4">
      <%= f.label :not_known  %>
      <%= f.radio_button :gender, :not_known %>
      <%= f.label :male  %>
      <%= f.radio_button :gender, :male %>
      <%= f.label :female  %>
      <%= f.radio_button :gender, :female %>
    </div>
  </div>  
  <div class="row col-md-8 mt-3">  
    <div class="col-md-4">
      <%= f.label :email %>
    </div>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row col-md-8 mt-3">  
    <div class="col-md-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row col-md-8 mt-3">  
    <div class="col-md-4">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row col-md-8 mt-3"> 
      <%= f.submit "新規登録" %>
  </div>
  <% end %>
  <%= render "public/shared/links" %>
</div>