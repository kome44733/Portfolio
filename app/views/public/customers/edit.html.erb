<%= form_with model: @customer do |f| %>
<div class="container">
  <div class="mb-4 mt-5">
    <h3>会員情報編集</h3>
  </div>
  <div class ="row col-12">
    <table class="table col-8 table-borderless mb-4">
      <tr>
        <td class="table-dark">ニックネーム</td>
        <td class ="pl-3">
          <%= f.text_field :nickname %>
        </td>
      </tr>
      <tr>
        <td class="table-dark"><%= f.label :email,"メールアドレス" %></td>
        <td class ="pl-3"><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
    </table>
  </div>
  <%= f.submit "編集内容を保存",class: 'btn btn-outline-success' %>
  <%= link_to "退会する", unsubscribe_path,class: 'btn btn-outline-success' %>
  <% end %>
</div>