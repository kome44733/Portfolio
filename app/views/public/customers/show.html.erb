<div class="container">
  <div class="col-12 mb-4 mt-5">
    <h3>マイページ</h3>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-borderless mb-0">
        <tr>
          <td class="col-2">
            <h4 class="font-weight-bold">登録情報</h4>
          </td>
          <td class="col-2">
            <%= link_to "編集する", edit_customer_path(current_customer),class: 'btn btn-outline-success' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered mt-0">
        <tbody>
          <tr>
            <td class="table-dark" style="width: 20%">ニックネーム</td>
            <td>
              <%= @customer.nickname %>
            </td>
          </tr>
          <tr>
            <td class="table-dark">性別</td>
            <td>
              <%= @customer.gender %>
            </td>
          </tr>
          <tr>
            <td class="table-dark">メールアドレス</td>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  

  <table class="table">
    <thead class="table-dark">
      <tr>
        <td>
          <h4 class="font-weight-bold">お気に入りの質問</h4>
        </td>
      </tr>
    </thead>
    <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.question.post %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <td>
          <h4 class="font-weight-bold">自分の投稿</h4>
        </td>
      </tr>
    </thead>
    <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <% link_to 
        <td><%= favorite.question.post %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>





