<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>マイページ</h3>
    </div>
    <div class="col-4">
      <h3><%= link_to "編集する", edit_customer_path(current_customer),class: 'btn btn-outline-success' %></h3>
    </div>
  </div>
  <div class="row flex-nowrap">
    <div class="col-md-3 border text-white bg-dark ">
      <p class= "my-3">ニックネーム</p>
    </div>
    <div class="col-md-9 border">
      <p class= "my-3"><%= @customer.nickname %></p>
    </div>
  </div>
  <div class="row flex-nowrap">
    <div class="col-md-3 border text-white bg-dark ">
      <p class= "my-3">性別</p>
    </div>
    <div class="col-md-9 border">
      <p class= "my-3"><%= @customer.gender %></p>
    </div>
  </div>
  <div class="row flex-nowrap">
    <div class="col-md-3 border text-white bg-dark ">
      <p class= "my-3">Email</p>
    </div>
    <div class="col-md-9 border">
      <p class= "my-3"><%= @customer.email %></p>
    </div>
  </div>
</div>


<div class="container mt-5">
  <ul class="nav nav-tabs nav-fill row" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">お気に入りの質問</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">投稿した質問</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-content">
      <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
        <div class="row flex-nowrap">
          <div class="col-md-3 col-sm-3 text-center text-white bg-dark">
            <p class= "my-3">職業</p>
          </div>
          <div class="col-md-9 col-sm-9 text-center text-white bg-dark">
            <p class= "my-3">質問内容</p>
          </div>
        </div>
        <% @favorites.each do |favorite| %>
          <div class="row flex-nowrap">
            <div class="col-md-3 col-sm-3 border py-2">
              <%= favorite.question.profession.name %>
            </div>
            <div class="col-md-9 col-sm-9 border py-2">
              <%= link_to question_path(favorite.question.id) do %>
                <%= favorite.question.post.truncate(20) %>
              <% end %>
            </div>
          </div>
        <%end%>
      </div>
      <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab">
        <div class="row flex-nowrap">
          <div class="col-md-3 col-sm-3 text-center text-white bg-dark">
            <p class= "my-3">職業</p>
          </div>
          <div class="col-md-9 col-sm-9 text-center text-white bg-dark">
            <p class= "my-3">質問内容</p>
          </div>
        </div>
        <% @questions.each do |question| %>
          <div class="row flex-nowrap">
            <div class="col-md-3 col-sm-3 border py-2">
              <%= question.profession.name %>
            </div>
            <div class="col-md-8 col-sm-8 border py-2">
              <%= link_to question_path(question) do %>
                <%= question.post.truncate(20) %>
              <% end %>
            </div>
            <div class="col-md-1 col-sm-1 border py-2">
              <%= link_to "Destroy", question_answer_path(question), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
            </div>
          </div>
        <%end%>
      </div>
    </div>    
  </div>      
</div>

