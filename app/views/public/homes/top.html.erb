        <%= render "/layouts/search" %></br>
      </div>
      <div class="col-md-12">
        <% if customer_signed_in? %>
        <%= link_to "質問をする" , new_question_path, class: "btn btn-outline-primary btn-block" %></br>
        <% end %>
      </div>
      <div class="col-md-12">
        <%= render "/layouts/questions",questions: @questions %>
      </div>
    </div>
    
      <div class="col-md-4">
        <%= render "/layouts/professions",professions: @professions %>
      </div>
    
  </div>
</div>